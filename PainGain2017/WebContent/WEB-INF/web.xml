<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>PainGain2017</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>Login</servlet-name>
    <servlet-class>controller.Login</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ActionNhanVien</servlet-name>
    <servlet-class>controller.ActionNhanVien</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ActionNhanVien</servlet-name>
    <url-pattern>/actionnhanvien</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ActionKhachHang</servlet-name>
    <servlet-class>controller.ActionKhachHang</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ActionKhachHang</servlet-name>
    <url-pattern>/actionkhachhang</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ActionNcc</servlet-name>
    <servlet-class>controller.ActionNcc</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ActionNcc</servlet-name>
    <url-pattern>/actionncc</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ActionCalam</servlet-name>
    <servlet-class>controller.ActionCalam</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ActionCalam</servlet-name>
    <url-pattern>/actioncalam</url-pattern>
  </servlet-mapping>
  
  <filter>
    <filter-name>loginFilter</filter-name>
    <filter-class>paingainshop.filter.loginFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>loginFilter</filter-name>
    <url-pattern>/home.jsp</url-pattern>
    <url-pattern>/employee.jsp</url-pattern>
    <url-pattern>/KhachHang.jsp</url-pattern>
    <url-pattern>/chamcong.jsp</url-pattern>
    <url-pattern>/nhacc.jsp</url-pattern>
    <url-pattern>/thuongphat.jsp</url-pattern>
    <url-pattern>/calam.jsp</url-pattern>
  </filter-mapping>
</web-app>